int getNodesCount(graph g) {
    int result = 0;
    for (node n in g) result++;
    return result;
}

int getArcsCount(graph g) {
    int result = 0;
    for (arc a in g) {
        result = result + 1;
    }
    return result;
}

void main() {
    // initialize nodes
    node a = node(1, 1);
    node b = node(1, 2);
    node c = node(2, 1);
    node d = node(2, 2);

    // initialize arcs
    arc ab = arc(a, b);
    arc bc = arc(b, c);
    arc cd = arc(c, d);
    arc da = arc(d, a);

    // build graph
    graph g = {};
    println("Initial graph: " + g);
    println("Building graph...");
    g = {a, b, c, d, ab, bc, cd, da};
    println("Graph built: " + g);

    // print results
    println("Nodes count: " + getNodesCount(g));
    println("Arcs count: " + getArcsCount(g));
    if (getNodesCount(g) == getArcsCount(g)) then {
        println("Arcs count equals nodes count");
    }
}
